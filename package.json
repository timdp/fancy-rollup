{
  "name": "fancy-rollup",
  "version": "0.5.3",
  "description": "Multi-process Rollup wrapper.",
  "repository": "timdp/fancy-rollup",
  "author": {
    "name": "Tim De Pauw",
    "url": "https://tmdpw.eu/"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "yarn": ">=1.6.0"
  },
  "bin": {
    "fancy-rollup": "dist/fancy-rollup.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf dist",
    "build": "rollup -i src/cli.js -o dist/fancy-rollup.js -f cjs --banner \"#!/usr/bin/env node\"",
    "lint": "yarn run standard '*.js' 'src/**/*.js'",
    "format": "yarn run prettier-standard '*.js' 'src/**/*.js'"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^2.4.1",
    "esm": "^3.2.25",
    "event-registry": "^0.3.0",
    "listr": "^0.14.1",
    "log-update": "^3.2.0",
    "mem": "^5.1.1",
    "moment": "^2.22.2",
    "p-defer": "^3.0.0",
    "pretty-bytes": "^5.1.0",
    "pretty-ms": "^5.0.0",
    "require-relative": "^0.8.7",
    "rollup": "^1.16.4",
    "serialize-error": "^4.1.0",
    "split-lines": "^2.0.0",
    "stats-lite": "^2.1.1",
    "yargs": "^13.2.4",
    "zen-observable": "^0.8.9"
  },
  "devDependencies": {
    "husky": "^3.0.0",
    "lint-staged": "^9.0.1",
    "prettier-standard": "^9.1.1",
    "rimraf": "^2.6.2",
    "standard": "^12.0.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint-staged"
    }
  }
}
